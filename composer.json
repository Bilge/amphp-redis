{
    "name": "amphp/redis",
    "description": "A non-blocking Redis client for Amp.",
    "keywords": [
        "amp",
        "amphp",
        "async",
        "client",
        "redis"
    ],
    "license": "MIT",
    "homepage": "https://github.com/amphp/redis",
    "authors": [
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        }
    ],
    "support": {
        "issues": "https://github.com/amphp/redis/issues"
    },
    "require": {
        "php": ">=8.1",
        "amphp/amp": "^3",
        "amphp/cache": "^2",
        "amphp/pipeline": "^1",
        "amphp/socket": "^2",
        "amphp/sync": "^2",
        "league/uri-parser": "^1.4"
    },
    "require-dev": {
        "amphp/phpunit-util": "^3",
        "amphp/process": "^2",
        "phpunit/phpunit": "^9",
        "amphp/php-cs-fixer-config": "^2-dev"
    },
    "minimum-stability": "beta",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Amp\\Redis\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Redis\\": "test",
            "Amp\\Cache\\Test\\": "vendor/amphp/cache/test"
        }
    }
}
